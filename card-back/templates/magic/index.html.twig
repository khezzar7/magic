{% extends 'base.html.twig' %}

{% block title %}Magic index{% endblock %}

{% block body %}
    
<div class="container">
  <h1 class="inline-text">Magic Cards</h1>
  <div class="row">
    <div class="col-10">
      <table class="table table-striped table-bordered">
          <thead class="bg-danger">
              <tr>

                  <th>Image</th>
                  <th>Title</th>
                  <th>Body</th>
                  <th>Edition</th>
                  <th>Rarity</th>
                  <th>Artist</th>
                  <th>actions</th>
              </tr>
          </thead>
          <tbody>
          {% for magic in magics %}
              <tr>

                  <td><img height="100px" src="{{('/upload/cards/')}}{{ magic.image }}"></td>
                  <td>{{ magic.title }}</td>
                  <td>{{ magic.body }}</td>
                  <td>{{ magic.edition }}</td>
                  <td>{{ magic.rarity }}</td>
                  <td>{{ magic.artist }}</td>
                  <td>
                      <a href="{{ path('magic_show', {'id': magic.id}) }}">show</a>
                      <a href="{{ path('magic_edit', {'id': magic.id}) }}">edit</a>
                  </td>
              </tr>
          {% else %}
              <tr>
                  <td colspan="8">no records found</td>
              </tr>
          {% endfor %}
          </tbody>
      </table>
    </div>
  </div>
</div>


    <a class="btn btn-primary"href="{{ path('magic_new') }}">Create new</a>
{% endblock %}
